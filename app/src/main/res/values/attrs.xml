<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AppBar.Menu">
        <attr name="toolbarMenuTextStyle" format="reference" />
        <attr name="toolbarMenuImageStyle" format="reference" />
        <attr name="toolbarMenuSpinnerStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="AppBar">
        <attr name="navigationGravity">
            <enum name="top" value="0" />
            <enum name="center_vertical" value="1" />
        </attr>
        <attr name="center_title" format="reference|string" />
        <attr name="center_title_size" format="dimension" />
        <attr name="center_title_color" format="reference|color" />
        <attr name="menu_left" format="reference" />
        <attr name="menu_right" format="reference" />
        <attr name="menu_center" format="reference" />
        <attr name="menu4" format="reference" />
        <attr name="menu5" format="reference" />
    </declare-styleable>


    <declare-styleable name="ProgressWheel">
        <attr name="matProg_progressIndeterminate" format="boolean" />
        <attr name="matProg_barColor" format="color" />
        <attr name="matProg_rimColor" format="color" />
        <attr name="matProg_rimWidth" format="dimension" />
        <attr name="matProg_spinSpeed" format="float" />
        <attr name="matProg_barSpinCycleTime" format="integer" />
        <attr name="matProg_circleRadius" format="dimension" />
        <attr name="matProg_fillRadius" format="boolean" />
        <attr name="matProg_barWidth" format="dimension" />
        <attr name="matProg_linearProgress" format="boolean" />
    </declare-styleable>

    <!--加载状态布局-->
    <declare-styleable name="LoadingLayout">
        <attr name="loadingView" format="reference" />
        <attr name="errorView" format="reference" />
        <attr name="retryView" format="reference" />
        <attr name="emptyView" format="reference" />
        <attr name="networkErrorView" format="reference" />
    </declare-styleable>


    <!--底部导航按钮-->
    <declare-styleable name="MyNavigationButton">
        <attr name="nav_icon" format="reference" />
        <attr name="nav_color" format="color" />
        <attr name="nav_text" format="string" />
        <attr name="nav_text_size" format="dimension" />
    </declare-styleable>
</resources>